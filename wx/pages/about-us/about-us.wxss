.about-container {
  padding: 30rpx;
}

.about-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.about-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.about-title {
  font-size: 36rpx;
  font-weight: bold;
}

.about-content {
  font-size: 32rpx;
  line-height: 1.6;
}

.about-description {
  margin-bottom: 32rpx;
}

.about-item {
  margin-bottom: 32rpx;
}

.about-item-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.about-item-content {
  color: #666;
}

.team-members {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.team-member {
  width: 80%;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.member-name {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.member-role {
  font-size: 26rpx;
  color: #666;
}