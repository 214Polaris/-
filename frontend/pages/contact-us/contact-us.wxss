.contact-container {
  padding: 40rpx;
  background-color: #f5f5f5;
}

.contact-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.contact-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.contact-subtitle {
  font-size: 28rpx;
  color: #666;
}

.contact-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.contact-item {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.contact-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.contact-info {
  font-size: 28rpx;
  color: #333;
}